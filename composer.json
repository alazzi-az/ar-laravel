{
    "name": "alazzi-az/ArLaravel",
    "description": "A ar-php Wrapper for Laravel",
    "keywords": [
        "alazzi-az",
        "laravel",
        "ArLaravel"
    ],
    "homepage": "https://github.com/AlazziAz/ArLaravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohammed Azman",
            "email": "azmman2012@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.9.2",
        "illuminate/contracts": "^9.0",
        "khaled.alshamaa/ar-php": "^6.3"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "AlazziAz\\ArLaravel\\": "src",
            "AlazziAz\\ArLaravel\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AlazziAz\\ArLaravel\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AlazziAz\\ArLaravel\\ArLaravelServiceProvider"
            ],
            "aliases": {
                "ArLaravel": "AlazziAz\\ArLaravel\\Facades\\ArLaravel"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
